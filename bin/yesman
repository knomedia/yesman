#!/usr/bin/env ruby

require 'yesman'
require 'yesman/cli_parser'
require 'yesman/config_proxy'
require 'yesman/global_config'
require 'yesman/class_type'
require 'yesman/templater'


def new_project
  project_name = ARGV.shift
  parser = CliParser.new
  parser.run ARGV
  parser.config[:project_name] = project_name
  puts "Generating new project: #{parser.config[:project_name]}"

  y = Yesman.new parser.config
end

def run_project
  flag = ARGV.shift
  #cp = ConfigProxy.new
  #puts cp.params
  if flag == '-d'
    debug_project
  else
    puts "run not yet supported"
  end
end

def debug_project
  puts "debug (-d) not yet supported"
end

def test_project
  puts "test not yet supported"
end

def generate
  c = ClassType.new
  c.parse_from_string "jsk::Testing < fred::Alternate"
  header_path = "lib/yesman/templates/header.cxx.erb"
  class_path = "lib/yesman/templates/class.cxx.erb"
  test_path = "lib/yesman/templates/test.cxx.erb"

  t = Templater.new
  output = t.merge c, header_path 
  puts output
  puts ""
  puts t.merge c, class_path
  puts ""
  puts t.merge c, test_path
end

def init 
  load_global_config
  run_commands
end

def load_global_config
  gc = GlobalConfig.new.load
end

def run_commands
  command = ARGV.shift
  case command
  when 'new'
    new_project
  when 'run'
    run_project
  when 'test'
    test_project
  when 'generate'
    generate
  else
    puts "command: #{command} not recognized"
  end
end


init




